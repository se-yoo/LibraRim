<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#b9cd9a"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/backbutton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/backbuttonImg"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rogo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="7"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/img_rogo"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/settingbutton"
            android:onClick="SetButtClick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/settingbuttonImg"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_set" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:text="책 정보"
                android:textSize="35dp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <ImageView
                android:id="@+id/bookImg"
                android:layout_width="320dp"
                android:layout_height="450dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent" />

            <TextView
                android:id="@+id/booktitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/bookImg"
                android:layout_marginLeft="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:layout_toEndOf="@+id/bookImg"
                android:layout_toRightOf="@+id/bookImg"
                android:text="책 제목"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/titleOfBook"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/booktitle"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@+id/booktitle"
                android:layout_toEndOf="@+id/booktitle"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/writer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/booktitle"
                android:layout_alignStart="@+id/booktitle"
                android:layout_below="@+id/booktitle"
                android:layout_marginTop="100dp"
                android:text="저자"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/writerOfBook"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/writer"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@+id/writer"
                android:layout_toEndOf="@+id/writer"
                android:text=""
                android:textSize="30dp" />

            <TextView
                android:id="@+id/publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/writer"
                android:layout_alignStart="@+id/writer"
                android:layout_below="@+id/writer"
                android:layout_marginTop="100dp"
                android:text="출판사"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/publisherOfBook"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/publisher"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_toRightOf="@+id/publisher"
                android:layout_toEndOf="@+id/publisher"
                android:text=""
                android:textSize="30dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <TextView
                android:id="@+id/group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="60dp"
                android:text="책 분류"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/groupOfBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/group"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/group"
                android:layout_toEndOf="@+id/group"
                android:text=""
                android:textSize="30dp" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/group"
                android:layout_alignStart="@+id/group"
                android:layout_alignTop="@+id/group"
                android:layout_marginTop="100dp"
                android:text="책 위치"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/locationOfBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/location"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/location"
                android:layout_toEndOf="@+id/location"
                android:text=""
                android:textSize="30dp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/location"
                android:layout_alignStart="@+id/location"
                android:layout_alignTop="@+id/location"
                android:layout_marginTop="100dp"
                android:text="도서상태"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/statusOfBook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/status"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/status"
                android:layout_toEndOf="@+id/status"
                android:text=""
                android:textSize="30dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_menubar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#b9cd9a"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="onMenuBtnClick"
            android:background="@drawable/button_press"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bot_home" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/classification_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="onMenuBtnClick"
            android:background="@drawable/button_press"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bot_classification" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/application_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="onMenuBtnClick"
            android:background="@drawable/button_press"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bot_application" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="onMenuBtnClick"
            android:background="@drawable/button_press"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bot_info" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
